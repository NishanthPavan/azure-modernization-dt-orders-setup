      OPEN_PORT="$(az vm open-port --port 80 --priority 1010 --resource-group "$AZURE_RESOURCE_GROUP" --name "$HOSTNAME" --subscription "$AZURE_SUBSCRIPTION")"
      add_oneagent_extension oneAgentLinux dt-orders-monolith
    fi
  fi
}

